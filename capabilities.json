                        { "value": "Hide", "displayName": "Hide" }
                    ] }
                },
                "multiselect": {
                    "displayName": "Multiple selection",
                    "type": { "bool": true }
                },
                "forcedSelection": {
                    "displayName": "Forced selection",
                    "type": { "bool": true }
                },
                "selected": {
